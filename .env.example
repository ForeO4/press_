# ===========================================
# Press! Environment Variables
# ===========================================
# Copy this file to .env.local and fill in values
# NEVER commit .env.local or any file with real secrets

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
APP_ENV=development
LOG_LEVEL=debug

# ===========================================
# Supabase (Public - exposed to browser)
# ===========================================
# Leave empty to run in mock mode (no backend required)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# ===========================================
# Supabase (Server-only - NEVER expose to browser)
# ===========================================
SUPABASE_SERVICE_ROLE_KEY=

# ===========================================
# Cloudflare R2 (Server-only - NEVER expose to browser)
# ===========================================
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=press-media
R2_PUBLIC_URL=

# ===========================================
# Stripe (Server-only - for event registration fees ONLY)
# ===========================================
# Note: Stripe is ONLY used for event registration fees
# It is NOT used for games, calcuttas, or presses (those use Alligator Teeth)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
